# Rails Environment
RAILS_ENV=development

# ThreadAgent Configuration
# Slack API credentials for ThreadAgent
THREAD_AGENT_SLACK_CLIENT_ID=your_slack_client_id_here
THREAD_AGENT_SLACK_CLIENT_SECRET=your_slack_client_secret_here
THREAD_AGENT_SLACK_SIGNING_SECRET=your_slack_signing_secret_here

# OpenAI API credentials for ThreadAgent
THREAD_AGENT_OPENAI_API_KEY=your_openai_api_key_here
THREAD_AGENT_OPENAI_MODEL=gpt-4o-mini

# Notion API credentials for ThreadAgent
THREAD_AGENT_NOTION_CLIENT_ID=your_notion_client_id_here
THREAD_AGENT_NOTION_CLIENT_SECRET=your_notion_client_secret_here

# ThreadAgent operational settings
THREAD_AGENT_DEFAULT_TIMEOUT=30
THREAD_AGENT_MAX_RETRIES=3

# Database (if using PostgreSQL in production)
# DATABASE_URL=postgresql://username:password@localhost/database_name

# Redis (if using for caching or background jobs)
# REDIS_URL=redis://localhost:6379/0

# Secret key base (Rails will generate this automatically in development)
# SECRET_KEY_BASE=your_secret_key_base_here
